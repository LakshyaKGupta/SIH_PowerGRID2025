# Frontend -> Backend integration
# Set this only when you have a running FastAPI backend.
# Example: http://localhost:8000 or https://powergrid-api.onrender.com
NEXT_PUBLIC_API_BASE_URL=

# Demo auth fallback
# true  = allow local demo login when Firebase is unavailable
# false = strict Firebase-only authentication
NEXT_PUBLIC_ENABLE_DEMO_AUTH=true

# Firebase web config (optional in demo mode)
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=

# Backend (FastAPI)
# If your model file path differs, set this in backend runtime env.
# ML_MODEL_PATH=server/models/multi_output_model.pkl
# ALLOW_MODEL_FALLBACK=true
